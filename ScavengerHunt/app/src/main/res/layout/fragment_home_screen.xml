<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cynchen.scavengerhunt.HomeScreenFragment">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Olin Scavenger Hunt"
        android:id="@+id/startmessage"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="30sp"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/instructions"
        android:layout_below="@id/startmessage"
        android:entries="@array/instructions_array"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        >

    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/instructions"
        android:layout_centerHorizontal="true"
        android:text="Start!"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:id="@+id/startbutton"/>


</RelativeLayout>
