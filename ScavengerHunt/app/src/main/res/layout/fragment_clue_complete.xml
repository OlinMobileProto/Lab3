<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hieunguyen.com.scavengerhunt.Fragments.ClueCompleteFragment"
    android:background="@drawable/map">

    <!-- TODO: MAKE BACKGROUND IMAGE RESOURCES -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo_uploaded"
        android:id="@+id/photo_uploaded_tv"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_clue"
        android:id="@+id/next_clue_button"
        android:layout_below="@+id/photo_uploaded_tv"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp" />
</RelativeLayout>
