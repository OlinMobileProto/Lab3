<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hieunguyen.com.scavengerhunt.Fragments.ClueFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cluetitle"
        android:id="@+id/title_tv"
        android:paddingTop="100dp"
        android:paddingBottom="16dp"
        android:typeface="normal"
        android:textSize="35sp"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="@dimen/clue_video_height"
        android:id="@+id/clue_vv"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageButton
        android:layout_width="@dimen/next_clue_button_width"
        android:layout_height="@dimen/next_clue_button_height"
        android:background="@drawable/imreadybutton"
        android:id="@+id/done_button"
        android:layout_marginTop="16dp"
        android:layout_margin="100dp"
        android:paddingBottom="20dp"
        android:paddingTop="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
