<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hieunguyen.com.scavengerhunt.Activities.ClueFragment">


    <VideoView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/clue_vv"
        android:layout_gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cluetitle"
        android:id="@+id/title_tv"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:typeface="normal"
        android:textSize="20sp"
        android:layout_above="@+id/clue_vv"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/done_button"
        android:text="@string/donecluebutton"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:layout_below="@+id/clue_vv"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
